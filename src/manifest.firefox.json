{
  "name": "EPFL ServiceNow Extension",
  "description": "A custom web extension to quickly retrieve essentials information about users",
  "manifest_version": 2,
  "version": "2.0.0",

  "applications": {
    "gecko": {
      "strict_min_version": "48.0.0",
      "id": "epfl-servicenow-extension@example.com"
    }
  },

  "content_scripts": [{
    "js": [ "js/contentscript.js" ],
    "matches": [
      "*://support.epfl.ch/*",
      "*://epfl.service-now.com/*"
    ],
    "run_at": "document_end"
  }],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "browser_action": {
    "default_icon": {
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "EPFL ServiceNow Extension",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "*://support.epfl.ch/*",
    "*://epfl.service-now.com/*",
    "*://people.epfl.ch/*",
    "*://search.epfl.ch/*"
  ],

  "icons": {
    "48": "images/icon-48.png"
  },

  "web_accessible_resources": [
    "css/themes/*.css"
  ]
}
